samples = ['SRR628582', 'SRR628583', 'SRR628584', 'SRR628585', 'SRR628586', 'SRR628587', 'SRR628588', 'SRR628589']

rule all:
	input: expand("{sample}.1", sample=samples)

rule fastq:
	input: "{sample}.1"
	output: "{sample}.1-1.fastq", "{sample}.1-2.fastq"
	singularity: "docker://evolbioinfo/sratoolkit:v2.5.7"
	shell: "fastq-dump --split-files {input} > {output}"