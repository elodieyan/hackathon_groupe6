SAMPLES=["SRR628582","SRR628583","SRR628584","SRR628585","SRR628586","SRR628587","SRR628588","SRR628589"]


rule all:
	input:
		expand("bamfiles/{sample}.bam", sample = SAMPLES)


rule counting:
	input:
    		"bamfiles/{sample}.bam"
	output:
		countfiles/{samples}.counts
	singularity:
		"evolbioinfo/subread:v2.0.1"
	threads: 4
	shell:
		"""
		featureCounts -T <CPUS> -t gene -g gene_id -s 0 -a input.gtf -o output.counts input.bam
    """
