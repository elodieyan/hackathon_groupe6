rule all:
	input:
		"/home/ubuntu/fastqFiles/SRR628582.1_1.fastq",
		"/home/ubuntu/fastqFiles/SRR628582.1_2.fastq",
		"/home/ubuntu/fastqFiles/SRR628583.1_1.fastq",
		"/home/ubuntu/fastqFiles/SRR628583.1_2.fastq"

rule download:
	priority: 50	
	output: 
		"/home/ubuntu/sraFiles/{sample}.1
	shell:
		"""
		list="SRR628582 SRR628583"; for i in $list; do wget -P /home/ubuntu/sraFiles/ https://sra-downloadb.be-md.ncbi.nlm.nih.gov/sos1/sra-pub-run-5/$i/$i.1; done			"""
rule makefastq:
	input:
		"/home/ubuntu/sraFiles/{sample}.1"
	output:
		"/home/ubuntu/fastqFiles/{sample}.1_1.fastq",
		"/home/ubuntu/fastqFiles/{sample}.1_2.fastq"
	singularity: 
		"docker://evolbioinfo/sratoolkit:v2.10.8"
	shell: 
		"""
		fastq-dump --split-files {input} -O /home/ubuntu/fastqFiles/ 		
		"""