SAMPLES = [SRR628582,SRR628583,SRR628584,SRR628585,SRR628586,SRR628587,SRR628588,SRR628589]
rule all:
	input:
		expand("fastqFiles/{sample}.1_1.fastq", sample=SAMPLES),
		expand("fastqFiles/{sample}.1_2.fastq", sample=SAMPLES)
		
rule download:
	priority: 50	
	output: 
		"sraFiles/{sample}.1"
	shell:
		"""
		list="SRR628582 SRR628583 SRR628584 SRR628585 SRR628586 SRR628587 SRR628588 SRR628589"; for i in $list; do wget -P sraFiles/ https://sra-downloadb.be-md.ncbi.nlm.nih.gov/sos1/sra-pub-run-5/$i/$i.1; done
		"""
rule makefastq:
	input:
		"sraFiles/{sample}.1"
	output:
		"fastqFiles/{sample}.1_1.fastq",
		"fastqFiles/{sample}.1_2.fastq"
	singularity: 
		"docker://evolbioinfo/sratoolkit:v2.10.8"
	shell: 
		"""
		fastq-dump --split-files {input} -O fastqFiles/ 		
		"""