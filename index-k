rule index:
	input: 
		"results/genome.fa"
	singularity: 
		"docker://evolbioinfo/star:v2.7.6a"
	shell :
		"""
		STAR --runThreadN 1 --runMode genomeGenerate --genomeDir genome/ --genomeFastaFiles {input} --limitGenomeGenerateRAM 25000000000
		"""

rule gunzipGenome:
	input:
		"results/genome.fa.gz"
	output:
		"results/genome.fa"
	shell:
		"""
		gunzip -c {input} > {output}
		"""
