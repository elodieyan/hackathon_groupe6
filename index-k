rule index:
	input: 
		"results/genome.fa"
	singularity: 
		"docker://evolbioinfo/star:v2.7.6a"
	threads: 4
	shell :
		"""
		STAR --runThreadN {threads} --runMode genomeGenerate --genomeDir genome/ --genomeFastaFiles {input}
		"""

rule gunzipGenome:
	input:
		"results/genome.fa.gz"
	output:
		"results/genome.fa"
	shell:
		"""
		gunzip -c {input} > {output}
		"""
